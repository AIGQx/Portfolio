---
import ProjectCard from "../components/ProjectCard.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<header
		class="flex flex-col items-center justify-center mx-40 text-cat-text leading-relaxed tracking-tight h-svh"
	>
		<div
			class="box-decoration-clone bg-gradient-to-r text-transparent from-cat-pink to-cat-mauve bg-clip-text"
		>
			<h1 class="font-extrabold text-9xl">Alejandro</h1>
			<div class="flex flex-row items-center gap-4">
				<h1 class="font-extrabold text-9xl">Galarza</h1>
				<svg
					class="align-middle text-cat-mauve"
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-linecap="round"
					stroke-linejoin="round"
					width="120"
					height="120"
					stroke-width="2"
				>
					<path d="M7 8l-4 4l4 4"></path>
					<path d="M17 8l4 4l-4 4"></path>
					<path d="M14 4l-4 16"></path>
				</svg>
			</div>
		</div>

		<p class="font-light mt-4 text-cat-subtext0">Software developer</p>
		<a
			class="flex flex-row items-center bg-gradient-to-r from-cat-red to-cat-peach rounded-lg p-2 text-cat-mantle font-bold gap-2 mt-8"
			href="/cv.pdf"	
		>
			Descargar CV
			<svg
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-linecap="round"
				stroke-linejoin="round"
				width="24"
				height="24"
				stroke-width="2"
			>
				<path d="M14 3v4a1 1 0 0 0 1 1h4"></path>
				<path d="M5 12v-7a2 2 0 0 1 2 -2h7l5 5v4"></path>
				<path d="M5 18h1.5a1.5 1.5 0 0 0 0 -3h-1.5v6"></path>
				<path d="M17 18h2"></path>
				<path d="M20 15h-3v6"></path>
				<path d="M11 15v6h1a2 2 0 0 0 2 -2v-2a2 2 0 0 0 -2 -2h-1z"
				></path>
			</svg>
		</a>
		<div
			class="w-full flex flex-row gap-4 items-center justify-center mt-8 sm:mt-12 mb-20 text-cat-mantle font-bold align-middle"
		>
			<a
				href="#projects"
				class="p-2 bg-gradient-to-r from-cat-pink to-cat-flamingo rounded-lg flex gap-2 items-center justify-center w-1/4"
			>
				<p class="">Proyectos</p>
				<svg
					viewBox="0 0 24 24"
					fill="none"
					width="24"
					height="24"
					stroke-width="2"
					stroke-linejoin="round"
					stroke-linecap="round"
					stroke="currentColor"
				>
					<title>Proyectos</title>
					<path
						d="M14.5 4h2.5a3 3 0 0 1 3 3v10a3 3 0 0 1 -3 3h-10a3 3 0 0 1 -3 -3v-5"
					></path>
					<path d="M6 5l-2 2l2 2"></path>
					<path d="M10 9l2 -2l-2 -2"></path>
				</svg>
			</a>
			<a
				href="#experiences"
				class="p-2 bg-gradient-to-r from-cat-sky to-cat-teal rounded-lg flex gap-2 items-center justify-center w-1/4"
				>Experiencia
				<svg
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-linecap="round"
					stroke-linejoin="round"
					width="24"
					height="24"
					stroke-width="2"
				>
					<title>Experiencia</title>
					<path
						d="M5 4m0 1a1 1 0 0 1 1 -1h2a1 1 0 0 1 1 1v14a1 1 0 0 1 -1 1h-2a1 1 0 0 1 -1 -1z"
					></path>
					<path
						d="M9 4m0 1a1 1 0 0 1 1 -1h2a1 1 0 0 1 1 1v14a1 1 0 0 1 -1 1h-2a1 1 0 0 1 -1 -1z"
					></path>
					<path d="M5 8h4"></path>
					<path d="M9 16h4"></path>
					<path
						d="M13.803 4.56l2.184 -.53c.562 -.135 1.133 .19 1.282 .732l3.695 13.418a1.02 1.02 0 0 1 -.634 1.219l-.133 .041l-2.184 .53c-.562 .135 -1.133 -.19 -1.282 -.732l-3.695 -13.418a1.02 1.02 0 0 1 .634 -1.219l.133 -.041z"
					></path>
					<path d="M14 9l4 -1"></path>
					<path d="M16 16l3.923 -.98"></path>
				</svg>
			</a>
			<a
				href="#contact"
				class="p-2 bg-gradient-to-r from-cat-mauve to-cat-pink rounded-lg flex gap-2 items-center justify-center w-1/4"
				>Contacto
				<svg
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-linecap="round"
					stroke-linejoin="round"
					width="24"
					height="24"
					stroke-width="2"
				>
					<title>Contacto</title>
					<path
						d="M20 6v12a2 2 0 0 1 -2 2h-10a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h10a2 2 0 0 1 2 2z"
					></path>
					<path d="M10 16h6"></path>
					<path d="M13 11m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path>
					<path d="M4 8h3"></path>
					<path d="M4 12h3"></path>
					<path d="M4 16h3"></path>
				</svg>
			</a>
			<a
				href=""
				class="p-2 bg-gradient-to-r from-cat-lavender to-cat-blue rounded-lg flex gap-2 items-center justify-center w-1/4"
			>
				<p>Creditos</p>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-linecap="round"
					stroke-linejoin="round"
					width="24"
					height="24"
					stroke-width="2"
				>
					<path
						d="M9.73 17.753l-5.23 -5.181a5 5 0 1 1 7.5 -6.566a5 5 0 0 1 8.563 5.041"
					></path>
					<path
						d="M17.8 20.817l-2.172 1.138a.392 .392 0 0 1 -.568 -.41l.415 -2.411l-1.757 -1.707a.389 .389 0 0 1 .217 -.665l2.428 -.352l1.086 -2.193a.392 .392 0 0 1 .702 0l1.086 2.193l2.428 .352a.39 .39 0 0 1 .217 .665l-1.757 1.707l.414 2.41a.39 .39 0 0 1 -.567 .411l-2.172 -1.138z"
					></path>
				</svg>
			</a>
		</div>
	</header>
	<section id="projects" class="text-center m-20 text-cat-text">
		<h1 class="font-extrabold text-2xl">PROYECTOS</h1>
		<!-- projects -->
		<div
			class="mt-4 mx-12 bg-cat-mantle p-4 grid grid-cols-4 gap-6 rounded-lg"
		>
			<ProjectCard
				img="./projects_preview/defaultPreview.webp"
				title="Project sample"
				description="This is a sample project"
				link="/project sample"
			/>
			<ProjectCard
				img="./projects_preview/defaultPreview.webp"
				title="Project sample"
				description="This is a sample project"
				link="/project1"
			/>
			<ProjectCard
				img="./projects_preview/defaultPreview.webp"
				title="Project sample"
				description="This is a sample project"
				link="/project1"
			/>
			<ProjectCard
				img="./projects_preview/defaultPreview.webp"
				title="Project sample"
				description="This is a sample project"
				link="/project1"
			/>
			<ProjectCard
				img="./projects_preview/defaultPreview.webp"
				title="Project sample"
				description="This is a sample project"
				link="/project1"
			/>
			<ProjectCard
				img="./projects_preview/defaultPreview.webp"
				title="Project sample"
				description="This is a sample project"
				link="/project1"
			/>
			<ProjectCard
				img="./projects_preview/defaultPreview.webp"
				title="Project sample"
				description="This is a sample project"
				link="/project1"
			/>
			<ProjectCard
				img="./projects_preview/defaultPreview.webp"
				title="Project sample"
				description="This is a sample project"
				link="/project1"
			/>
		</div>
		<!-- end projects -->
	</section>
	<section class="text-center w-full m-20 text-cat-text">
		<h1 class="font-extrabold text-2xl text-center mb-12">CONTACTO</h1>
		<div class="flex justify-center items-center flex-col gap-8">
			<input
				type="text"
				placeholder="Nombre"
				class="bg-cat-mantle p-4 w-1/4 rounded-lg text-cat-text font-bold"
			/>
			<input
				type="email"
				placeholder="Email"
				class="bg-cat-mantle p-4 w-1/4 rounded-lg text-cat-text font-bold"
			/>
			<textarea name="mensaje" id="mensje" placeholder="Mensaje" class="bg-cat-mantle p-4 w-1/4 rounded-lg text-cat-text font-bold field-sizing-content"></textarea>
			<button class="bg-cat-mantle p-4 rounded-lg text-cat-text font-bold"
				>Send</button
			>
		</div>
	</section>
</Layout>


---
import Layout from "../layouts/Layout.astro"
---

<Layout>
    
    <div class="flex flex-col items-center justify-center h-screen text-cat-text">
        <h1 class="text-9xl font-bold bg-gradient-to-r text-transparent bg-clip-text from-cat-pink to-cat-mauve">404</h1>
        <p class="text-lg">Page not found</p>
        <p class="text-xs">The page you are looking for does not exist</p>
        <button class="bg-gradient-to-r from-cat-red to-cat-peach text-cat-crust font-bold px-4 py-2 rounded-lg mt-4">
            <a href="/" class="">Go back</a>
        </button>
    </div>

</Layout>
